<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <com.androidplot.xy.XYPlot
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sensor_plot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        androidPlot.domainLabelWidget.labelPaint.textSize="15sp"
        androidPlot.graphWidget.domainLabelPaint.textSize="15sp"
        androidPlot.graphWidget.domainOriginLabelPaint.textSize="15sp"
        androidPlot.graphWidget.marginBottom="40dp"
        androidPlot.graphWidget.marginRight="15dp"
        androidPlot.graphWidget.marginLeft="20dp"
        androidPlot.graphWidget.marginTop="20dp"
        androidPlot.graphWidget.rangeLabelPaint.textSize="15sp"
        androidPlot.graphWidget.rangeLabelPaint.color="@color/black"
        androidPlot.graphWidget.rangeOriginLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.legendWidget.heightMetric.value="45dp"
        androidPlot.legendWidget.iconSizeMetrics.heightMetric.value="14sp"
        androidPlot.legendWidget.iconSizeMetrics.widthMetric.value="14sp"
        androidPlot.legendWidget.textPaint.textSize="20sp"
        androidPlot.rangeLabelWidget.labelPaint.textSize="15sp"
        androidPlot.titleWidget.labelPaint.textSize="@dimen/title_font_size"
        androidPlot.titleWidget.marginTop="6dp"
        androidplot.renderMode="use_background_thread"
        androidPlot.domainLabel="Time"
        androidPlot.titleWidget.labelPaint.color="@color/black"
        androidPlot.domainLabelWidget.labelPaint.color="@color/black"
        androidPlot.rangeLabelWidget.labelPaint.color="@color/black"
        androidPlot.graphWidget.domainLabelPaint.color="@color/black"
        androidPlot.backgroundPaint.color="@color/fog"
        androidPlot.borderPaint.color="@color/white"
        androidPlot.graphWidget.backgroundPaint.color="@color/fog"
        androidPlot.graphWidget.gridBackgroundPaint.color="@color/dim_fog"/>
</android.support.v7.widget.CardView>