<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@drawable/box"
    android:id="@+id/parent_device_card">

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_device_icon"
        android:padding="4dp"
        android:textSize="@dimen/device_icon_label"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tv_os_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textSize="@dimen/device_icon_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#000"/>

    <ImageView
        android:id="@+id/iv_device_icon"
        android:layout_width="@dimen/device_icon"
        android:layout_height="@dimen/device_icon"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>