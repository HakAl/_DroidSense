<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/card_sensor_frame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/list_selector"
        android:id="@+id/parent_sensor_card">

        <ImageView
            android:id="@+id/iv_sensor_icon"
            android:layout_width="@dimen/device_omni_icon"
            android:layout_height="@dimen/device_omni_icon"
            android:layout_marginRight="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_sensor_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:textSize="23sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_sensor_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/tv_sensor_title"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#000"/>

        <View
            android:id="@+id/sensor_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey"
            android:layout_below="@+id/iv_sensor_icon"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/sensor_divider"
            android:weightSum="4">
            <TextView
                android:id="@+id/tv_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="@color/dark_grey"/>
            <TextView
                android:id="@+id/tv_y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="@color/dark_grey"/>
            <TextView
                android:id="@+id/tv_z"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="@color/dark_grey"/>

            <TextView
                android:id="@+id/tv_sensor_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>