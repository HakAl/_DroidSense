<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/card_sensor_frame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="@drawable/list_selector"
        android:id="@+id/parent_sensor_card">

        <TextView
            android:id="@+id/tv_sensor_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_sensor_icon"
            android:textSize="@dimen/device_icon_label"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_sensor_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:textColor="#000"/>

        <ImageView
            android:id="@+id/iv_sensor_icon"
            android:layout_width="@dimen/device_icon"
            android:layout_height="@dimen/device_icon"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/iv_sensor_icon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:weightSum="4">
            <TextView
                android:id="@+id/tv_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="italic"
                android:textSize="17sp"
                android:textColor="@color/dark_grey"/>
            <TextView
                android:id="@+id/tv_y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="italic"
                android:textSize="17sp"
                android:textColor="@color/dark_grey"/>
            <TextView
                android:id="@+id/tv_z"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textStyle="italic"
                android:textSize="17sp"
                android:textColor="@color/dark_grey"/>

            <TextView
                android:id="@+id/tv_sensor_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>