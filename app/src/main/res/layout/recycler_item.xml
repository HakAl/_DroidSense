<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:id="@+id/card_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_four"
            android:layout_marginTop="@dimen/activity_eight"
            android:textSize="20sp"
            android:textColor="#000"/>

        <include layout="@layout/grey_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/card_title"/>

        <TextView
            android:id="@+id/card_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/card_title"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="@dimen/activity_eight"
            android:textColor="#88222222"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>